        "templates": [
            {
                "uuid": "e5f6c1b9d2a34f8c9b7d3e1a4c6f8b2d",
                "template": "Template Ubuntu Shared",
                "name": "Ubuntu Linux Shared Monitoring",
                "description": "Shared template for all Ubuntu 20.04+ servers. Import once, use for all Ubuntu hosts.",
                "groups": [
                    {
                        "name": "Templates/Operating systems"
                    }
                ],
                "items": [
                    {
                        "uuid": "a1b2c3d4e5f6789012345678901234567",
                        "name": "CPU Temperature",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.cpu.temp",
                        "delay": "30s",
                        "value_type": "FLOAT",
                        "units": "°C",
                        "description": "Current CPU temperature from sensors"
                    },
                    {
                        "uuid": "b2c3d4e5f67890123456789012345678",
                        "name": "Available Memory",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.mem.available",
                        "delay": "30s",
                        "value_type": "UNSIGNED",
                        "units": "B",
                        "description": "Available memory in bytes"
                    },
                    {
                        "uuid": "c3d4e5f678901234567890123456789",
                        "name": "Physical Disk Count",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.disk.count",
                        "delay": "1h",
                        "value_type": "UNSIGNED",
                        "description": "Number of physical disks"
                    },
                    {
                        "uuid": "d4e5f6789012345678901234567890",
                        "name": "System Uptime (days)",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.uptime.days",
                        "delay": "5m",
                        "value_type": "UNSIGNED",
                        "units": "days",
                        "description": "System uptime in days"
                    },
                    {
                        "uuid": "e5f67890123456789012345678901",
                        "name": "Running Services Count",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.service.count",
                        "delay": "5m",
                        "value_type": "UNSIGNED",
                        "description": "Number of running systemd services"
                    },
                    {
                        "uuid": "f678901234567890123456789012",
                        "name": "Docker Containers Running",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.docker.containers",
                        "delay": "1m",
                        "value_type": "UNSIGNED",
                        "description": "Number of running Docker containers"
                    },
                    {
                        "uuid": "a789012345678901234567890123",
                        "name": "Available System Updates",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.updates.available",
                        "delay": "1h",
                        "value_type": "UNSIGNED",
                        "description": "Number of available apt updates"
                    },
                    {
                        "uuid": "b890123456789012345678901234",
                        "name": "Security Updates",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.updates.security",
                        "delay": "1h",
                        "value_type": "UNSIGNED",
                        "description": "Number of security updates available"
                    },
                    {
                        "uuid": "c901234567890123456789012345",
                        "name": "Kernel Version",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.kernel.version",
                        "delay": "1d",
                        "value_type": "TEXT",
                        "description": "Current kernel version"
                    },
                    {
                        "uuid": "d012345678901234567890123456",
                        "name": "Reboot Required",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.reboot.required",
                        "delay": "5m",
                        "value_type": "UNSIGNED",
                        "description": "1 if reboot required, 0 otherwise"
                    },
                    {
                        "uuid": "e123456789012345678901234567",
                        "name": "Zombie Processes",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.proc.zombies",
                        "delay": "1m",
                        "value_type": "UNSIGNED",
                        "description": "Number of zombie processes"
                    },
                    {
                        "uuid": "f234567890123456789012345678",
                        "name": "Established Connections",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.net.established",
                        "delay": "30s",
                        "value_type": "UNSIGNED",
                        "description": "Number of established TCP connections"
                    },
                    {
                        "uuid": "a345678901234567890123456789",
                        "name": "Listening Ports",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.net.listening",
                        "delay": "5m",
                        "value_type": "UNSIGNED",
                        "description": "Number of listening TCP ports"
                    },
                    {
                        "uuid": "b456789012345678901234567890",
                        "name": "TIME_WAIT Connections",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.net.timewait",
                        "delay": "30s",
                        "value_type": "UNSIGNED",
                        "description": "Number of connections in TIME_WAIT state"
                    },
                    {
                        "uuid": "c567890123456789012345678901",
                        "name": "Auth Failures (last 100 lines)",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.log.auth.failed",
                        "delay": "5m",
                        "value_type": "UNSIGNED",
                        "description": "Authentication failures in last 100 log lines"
                    },
                    {
                        "uuid": "d678901234567890123456789012",
                        "name": "Syslog Errors (last 100 lines)",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.log.syslog.errors",
                        "delay": "5m",
                        "value_type": "UNSIGNED",
                        "description": "Error messages in last 100 syslog lines"
                    }
                ],
                "discovery_rules": [
                    {
                        "uuid": "dr01234567890123456789012345",
                        "name": "Disk Discovery",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.disk.discovery",
                        "delay": "1h",
                        "item_prototypes": [
                            {
                                "uuid": "ip01234567890123456789012345",
                                "name": "Disk {#DISKNAME}: Temperature",
                                "type": "ZABBIX_ACTIVE",
                                "key": "ubuntu.disk.temp[{#DISKNAME}]",
                                "delay": "5m",
                                "value_type": "FLOAT",
                                "units": "°C",
                                "description": "Temperature of disk {#DISKNAME}"
                            },
                            {
                                "uuid": "ip12345678901234567890123456",
                                "name": "Disk {#DISKNAME}: SMART Status",
                                "type": "ZABBIX_ACTIVE",
                                "key": "ubuntu.disk.smart[{#DISKNAME}]",
                                "delay": "1h",
                                "value_type": "UNSIGNED",
                                "description": "SMART health status (1=OK, 0=Failed)"
                            },
                            {
                                "uuid": "ip23456789012345678901234567",
                                "name": "Disk {#DISKNAME}: I/O Utilization",
                                "type": "ZABBIX_ACTIVE",
                                "key": "ubuntu.disk.io.util[{#DISKNAME}]",
                                "delay": "1m",
                                "value_type": "FLOAT",
                                "units": "%",
                                "description": "I/O utilization percentage for {#DISKNAME}"
                            }
                        ],
                        "trigger_prototypes": [
                            {
                                "uuid": "tp01234567890123456789012345",
                                "expression": "last(/Template Ubuntu Shared/ubuntu.disk.temp[{#DISKNAME}])>60",
                                "name": "Disk {#DISKNAME}: Temperature too high",
                                "priority": "WARNING",
                                "description": "Disk temperature exceeds 60°C"
                            },
                            {
                                "uuid": "tp12345678901234567890123456",
                                "expression": "last(/Template Ubuntu Shared/ubuntu.disk.smart[{#DISKNAME}])=0",
                                "name": "Disk {#DISKNAME}: SMART check failed",
                                "priority": "HIGH",
                                "description": "Disk SMART health check failed"
                            },
                            {
                                "uuid": "tp23456789012345678901234567",
                                "expression": "avg(/Template Ubuntu Shared/ubuntu.disk.io.util[{#DISKNAME}],5m)>90",
                                "name": "Disk {#DISKNAME}: High I/O utilization",
                                "priority": "WARNING",
                                "description": "Disk I/O utilization over 90% for 5 minutes"
                            }
                        ]
                    },
                    {
                        "uuid": "dr12345678901234567890123456",
                        "name": "Service Discovery",
                        "type": "ZABBIX_ACTIVE",
                        "key": "ubuntu.service.discovery",
                        "delay": "1h",
                        "item_prototypes": [
                            {
                                "uuid": "ip34567890123456789012345678",
                                "name": "Service {#SERVICE}: Status",
                                "type": "ZABBIX_ACTIVE",
                                "key": "ubuntu.service.status[{#SERVICE}]",
                                "delay": "1m",
                                "value_type": "TEXT",
                                "description": "Status of service {#SERVICE}"
                            }
                        ],
                        "trigger_prototypes": [
                            {
                                "uuid": "tp34567890123456789012345678",
                                "expression": "last(/Template Ubuntu Shared/ubuntu.service.status[{#SERVICE}],#3)<>\"active\"",
                                "name": "Service {#SERVICE} is not running",
                                "priority": "WARNING",
                                "description": "Service {#SERVICE} is not in active state"
                            }
                        ]
                    }
                ],
                "triggers": [
                    {
                        "uuid": "tr01234567890123456789012345",
                        "expression": "last(/Template Ubuntu Shared/ubuntu.cpu.temp)>80",
                        "name": "CPU temperature critical",
                        "priority": "HIGH",
                        "description": "CPU temperature exceeds 80°C"
                    },
                    {
                        "uuid": "tr12345678901234567890123456",
                        "expression": "last(/Template Ubuntu Shared/ubuntu.cpu.temp)>70",
                        "name": "CPU temperature warning",
                        "priority": "WARNING",
                        "description": "CPU temperature exceeds 70°C"
                    },
                    {
                        "uuid": "tr23456789012345678901234567",
                        "expression": "last(/Template Ubuntu Shared/ubuntu.mem.available)<536870912",
                        "name": "Available memory critical",
                        "priority": "HIGH",
                        "description": "Less than 512MB memory available"
                    },
                    {
                        "uuid": "tr34567890123456789012345678",
                        "expression": "last(/Template Ubuntu Shared/ubuntu.updates.security)>0",
                        "name": "Security updates available",
                        "priority": "WARNING",
                        "description": "Security updates are available for installation"
                    },
                    {
                        "uuid": "tr45678901234567890123456789",
                        "expression": "last(/Template Ubuntu Shared/ubuntu.reboot.required)=1",
                        "name": "System reboot required",
                        "priority": "INFO",
                        "description": "System requires reboot for updates to take effect"
                    },
                    {
                        "uuid": "tr56789012345678901234567890",
                        "expression": "last(/Template Ubuntu Shared/ubuntu.proc.zombies)>10",
                        "name": "High number of zombie processes",
                        "priority": "WARNING",
                        "description": "More than 10 zombie processes detected"
                    },
                    {
                        "uuid": "tr67890123456789012345678901",
                        "expression": "last(/Template Ubuntu Shared/ubuntu.net.established)>1000",
                        "name": "High number of connections",
                        "priority": "WARNING",
                        "description": "More than 1000 established connections"
                    },
                    {
                        "uuid": "tr78901234567890123456789012",
                        "expression": "last(/Template Ubuntu Shared/ubuntu.log.auth.failed)>10",
                        "name": "Multiple authentication failures",
                        "priority": "WARNING",
                        "description": "More than 10 authentication failures detected"
                    },
                    {
                        "uuid": "tr89012345678901234567890123",
                        "expression": "last(/Template Ubuntu Shared/ubuntu.disk.count)=0",
                        "name": "No disks detected",
                        "priority": "DISASTER",
                        "description": "No physical disks detected on the system"
                    }
                ],
