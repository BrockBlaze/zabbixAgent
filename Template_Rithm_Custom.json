                "discovery_rules": [
                    {
                        "uuid": "dr_disk001122334455667788990011223344",
                        "name": "Disk Discovery",
                        "type": "ZABBIX_ACTIVE",
                        "key": "custom.discovery.disks",
                        "delay": "1h",
                        "item_prototypes": [
                            {
                                "uuid": "ip_disk001122334455667788990011223344",
                                "name": "Disk {#DISKNAME}: Temperature",
                                "type": "ZABBIX_ACTIVE",
                                "key": "custom.disk.temperature[{#DISKNAME}]",
                                "delay": "5m",
                                "value_type": "FLOAT",
                                "units": "°C",
                                "description": "Temperature of disk {#DISKNAME}"
                            },
                            {
                                "uuid": "ip_disk001122334455667788990011223345",
                                "name": "Disk {#DISKNAME}: SMART Status",
                                "type": "ZABBIX_ACTIVE",
                                "key": "custom.disk.smart_status[{#DISKNAME}]",
                                "delay": "1h",
                                "value_type": "UNSIGNED",
                                "description": "SMART health status of disk {#DISKNAME} (1=OK, 0=Failed)"
                            }
                        ],
                        "trigger_prototypes": [
                            {
                                "uuid": "tp_disk001122334455667788990011223344",
                                "expression": "last(/Template Rithm Custom/custom.disk.temperature[{#DISKNAME}])>60",
                                "name": "Disk {#DISKNAME}: High temperature (>{$DISK.TEMP.WARN:\"60\"}°C)",
                                "priority": "WARNING",
                                "description": "Disk temperature is above warning threshold"
                            },
                            {
                                "uuid": "tp_disk001122334455667788990011223345",
                                "expression": "last(/Template Rithm Custom/custom.disk.smart_status[{#DISKNAME}])=0",
                                "name": "Disk {#DISKNAME}: SMART check failed",
                                "priority": "HIGH",
                                "description": "Disk SMART health check has failed"
                            }
                        ]
                    },
                    {
                        "uuid": "dr_svc001122334455667788990011223344",
                        "name": "Service Discovery",
                        "type": "ZABBIX_ACTIVE",
                        "key": "custom.discovery.services",
                        "delay": "1h",
