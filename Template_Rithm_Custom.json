                        "trigger_prototypes": [
                            {
                                "uuid": "tp_svc001122334455667788990011223344",
                                "expression": "last(/Template Rithm Custom/custom.service.status[{#SERVICE}],#3)<>\"active\"",
                                "name": "Service {#SERVICE}: Not running",
                                "priority": "WARNING",
                                "description": "Service {#SERVICE} is not in active state"
                            }
                        ]
