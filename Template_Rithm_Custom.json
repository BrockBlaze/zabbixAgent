                        "uuid": "dr_net001122334455667788990011223344",
                        "name": "Network Interface Discovery",
                        "type": "ZABBIX_ACTIVE",
                        "key": "custom.discovery.network_interfaces",
                        "delay": "1h",
                        "item_prototypes": [
                            {
                                "uuid": "ip_net001122334455667788990011223344",
                                "name": "Interface {#INTERFACE}: Status",
                                "type": "ZABBIX_ACTIVE",
                                "key": "net.if.status[{#INTERFACE}]",
                                "delay": "1m",
                                "value_type": "UNSIGNED",
                                "description": "Status of network interface {#INTERFACE}"
                            },
                            {
                                "uuid": "ip_net001122334455667788990011223345",
                                "name": "Interface {#INTERFACE}: Incoming Traffic",
                                "type": "ZABBIX_ACTIVE",
                                "key": "net.if.in[{#INTERFACE}]",
                                "delay": "30s",
                                "value_type": "UNSIGNED",
                                "units": "bps",
                                "preprocessing": [
                                    {
                                        "type": "CHANGE_PER_SECOND"
                                    },
                                    {
                                        "type": "MULTIPLIER",
                                        "params": "8"
                                    }
                                ],
                                "description": "Incoming traffic on interface {#INTERFACE}"
                            },
                            {
                                "uuid": "ip_net001122334455667788990011223346",
                                "name": "Interface {#INTERFACE}: Outgoing Traffic",
                                "type": "ZABBIX_ACTIVE",
                                "key": "net.if.out[{#INTERFACE}]",
                                "delay": "30s",
                                "value_type": "UNSIGNED",
                                "units": "bps",
                                "preprocessing": [
                                    {
                                        "type": "CHANGE_PER_SECOND"
                                    },
                                    {
                                        "type": "MULTIPLIER",
                                        "params": "8"
                                    }
                                ],
                                "description": "Outgoing traffic on interface {#INTERFACE}"
                            }
                        ]
