                "triggers": [
                    {
                        "uuid": "tr_cpu001122334455667788990011223344",
                        "expression": "last(/Template Rithm Custom/custom.cpu.temperature)>80",
                        "name": "CPU: Temperature critical (>{$CPU.TEMP.CRIT:\"80\"}°C)",
                        "priority": "HIGH",
                        "description": "CPU temperature is critically high"
